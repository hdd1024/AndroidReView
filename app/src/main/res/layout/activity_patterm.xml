<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Patterm.PattermActivity"
    tools:showIn="@layout/activity_patterm">

    <Button
        android:id="@+id/mBnt_SingTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singleTop" />

    <Button
        android:id="@+id/mBnt_SingTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singleTask" />

    <Button
        android:id="@+id/mBnt_SingInstance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singleInstance" />

    <Button
        android:id="@+id/mBnt_Patterm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转自己" />

    <Button
        android:id="@+id/mBnt_cmd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="执行命令"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTV_Patterm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:text="这是一个测试页面" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>