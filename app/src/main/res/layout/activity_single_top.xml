<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Patterm.SingleTopActivity">

    <Button
        android:id="@+id/mBnt_Patterm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="patterm" />

    <Button
        android:id="@+id/mBnt_SingTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singleTask" />
    <Button
        android:id="@+id/mBnt_SingInstance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singleInstance" />
    <Button
        android:id="@+id/mBnt_SingTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转自己" />
    <TextView
        android:id="@+id/mTV_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" />
</LinearLayout>